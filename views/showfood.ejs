<style>
    body {
        margin: 0;
    }

    .maincontainer {
        width: 100%;
        height: 90%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: poppins;
    }

    .box {
        background: white;
        width: 60%;
        height: auto;
        border-radius: 10px;
        padding: 15px;
        border: 1px solid grey;
    }

    .heading {
        display: flex;
        flex-direction: row;
        align-items: center;

    }

    .headingstyle {
        margin-left: 10px;
        font-size: 18px;
        font-weight: bold;
    }

    .btncenter {
        display: flex;
        justify-content: center;
    }

    .btnsize {
        width: 80%;
        margin-top: 5px;
    }

    .addpic {
        width: 60px;
        height: 40px;
        border-radius: 10px;
    }
</style>

<html>

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="/javascripts/project.js"></script>
</head>
<form action="/food/update_food_data" method="post">
    <input type="hidden" value="<%=data.foodid %>" name="foodid">
    <div class="maincontainer">
        <div class="box">

            <div class="row">
                <div class="col-12">


                    <div class="heading">
                        <div style="display: flex; align-items: center;">
                            <img src="/images/Haldiram.png" width="70">


                            <div class="headingstyle">Update Food Register</div>


                        </div>
                        <div style="margin-left: auto;">
                            <a href="/food/display_all_food">
                                <img src="/images/click.png" class="addpic"></a>
                        </div>
                    </div>


                </div>
            </div>

            <div class="row" style="margin-top: 10px;">
                <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
                    <select name="categoryid" id="categoryid" class="form-select">
                        <option selected value="<%=data.categoryid %>">
                            <%=data.categoryname %>
                        </option>
                    </select>
                </div>
                <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
                    <select name="subcategoryid" id="subcategoryid" class="form-select">
                        <option selected value="<%=data.subcategoryid %>">
                            <%=data.subcategoryname %>
                        </option>
                    </select>
                </div>
                <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
                    <!-- <label for="foodname" class="form-label">Food Name</label> -->
                    <input type="text" value="<%=data.foodname %>" class="form-control" name="foodname" id="foodname"
                        placeholder="Food Name">
                </div>
            </div>

            <div class="row" style="margin-top: 5px;">
                <div class="col-lg-12">
                    <textarea class="form-control" name="ingredients" rows="2"
                        placeholder="Ingredients"><%=data.ingredients %></textarea>
                </div>
            </div>

            <div class="row" style="margin-top: 10px;">
                <div class="col-lg-12">
                    <textarea class="form-control" name="description" rows="2"
                        placeholder="Description"><%=data.description %></textarea>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 col-xs-12 col-lg-6" style="margin-top: 5px;">
                    <input type="text" class="form-control" name="price" placeholder="Price" value="<%=data.price %>">
                </div>
                <div class="col-sm-12 col-xs-12 col-lg-6" style="margin-top: 5px;">
                    <input type="text" class="form-control" name="offerprice" placeholder="Offer Price"
                        value="<%=data.offerprice %>">
                </div>
            </div>

            <div class="row" style="margin-top: 10px;">
                <div class="col-sm-12 col-xs-12 col-lg-3"
                    style="display: flex; justify-content: center; align-items: center;">
                    <div class="form-check form-check-inline">
                        <input <% if(data.foodtype=='Veg' ) { %> checked <% } %> class="form-check-input" type="radio"
                            name="foodtype" id="foodtype" value="Veg">
                            <label class="form-check-label" for="foodtype">VegðŸŸ¢</label>
                    </div>
                    <div class="form-check form-check-inline" style="margin-top: 5px;">
                        <input <% if(data.foodtype=='NonVeg' ) { %> checked <% } %> class="form-check-input"
                            type="radio" name="foodtype" id="foodtype" value="NonVeg">
                            <label class="form-check-label" for="foodtype">Non-VegðŸ”´</label>
                    </div>
                </div>
                <div class="col-sm-12 col-xs-12 col-lg-3" style="margin-top: 5px;">
                    <select name="status" id="status" class="form-select">
                        <option selected>
                            <%=data.status %>
                        </option>
                        <option>Continue</option>
                        <option>Discontinue</option>
                    </select>
                </div>
            </div>

            <div class="row" style="margin-top: 20px;">
                <div class="col-lg-6 col-sm-12 col-xs-12 btncenter ">
                    <button type="submit" class="btn btn-primary btnsize" name="btn" value="Edit">Edit</button>
                </div>
                <div class="col-lg-6 col-sm-12 col-xs-12 btncenter ">
                    <button type="submit" class="btn btn-primary btnsize" name="btn" value="Delete">Delete</button>
                </div>
            </div>

            <div class="row" style="margin-top: 10px;">
                <div class="col-lg-12 col-sm-12 col-xs-12 btncenter ">

                </div>
            </div>



        </div>
    </div>
</form>

</html>